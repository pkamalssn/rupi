<%= render "layouts/shared/htmldoc" do %>
  <div class="min-h-screen bg-surface flex flex-col">
    <%# Header %>
    <header class="py-6 px-4 text-center border-b border-tertiary">
      <%= link_to root_path, class: "inline-block group" do %>
        <%= image_tag "logomark.svg", class: "w-16 h-16 mx-auto mb-2 rupi-logo" %>
        <h1 class="text-2xl font-bold" style="background: linear-gradient(135deg, var(--rupi-green) 0%, var(--rupi-gold) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">RUPI</h1>
      <% end %>
    </header>

    <%# Main content - scrollable %>
    <main class="flex-1 overflow-y-auto px-4 py-8">
      <div class="max-w-3xl mx-auto">
        <div class="bg-container rounded-xl shadow-border-xs p-6 md:p-8">
          <%= yield %>
        </div>
        
        <%# Back link %>
        <div class="mt-6 text-center">
          <%= link_to "← Back to RUPI", root_path, class: "text-accent hover:underline text-sm" %>
          <span class="text-secondary mx-2">•</span>
          <%= link_to "Privacy", privacy_path, class: "text-secondary hover:text-primary text-sm" %>
          <span class="text-secondary mx-2">•</span>
          <%= link_to "Terms", terms_path, class: "text-secondary hover:text-primary text-sm" %>
        </div>
      </div>
    </main>

    <%# Footer %>
    <footer class="py-4 px-4 text-center text-xs text-secondary border-t border-tertiary">
      <p>&copy; <%= Date.current.year %> RUPI - Manage your Rupees easier with RUPI! ✨</p>
    </footer>
  </div>
<% end %>

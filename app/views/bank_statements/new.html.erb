<% content_for :title, @credit_card_mode ? "Upload Credit Card Statement" : "Upload Bank Statement" %>

<div class="settings-page">
  <div class="max-w-2xl mx-auto px-4 py-8">
    <div class="mb-8 flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold text-primary">
          <%= @credit_card_mode ? "Upload Credit Card Statement" : "Upload Bank Statement" %>
        </h1>
        <p class="text-secondary mt-1">
          <%= @credit_card_mode ? "Import transactions from your credit card statement (PDF)" : "Import transactions from your Indian bank statement (PDF or Excel)" %>
        </p>
      </div>
      
      <% unless @credit_card_mode %>
        <%= link_to new_loan_document_import_path, class: "flex items-center gap-2 px-3 py-1.5 bg-surface-inset border border-secondary/30 text-primary rounded-lg text-sm font-medium hover:bg-surface-inset-hover transition-colors whitespace-nowrap" do %>
          <%= icon("sparkles", size: "sm") %>
          AI Loan Import
        <% end %>
      <% end %>
    </div>

    <%= form_with model: @import, url: bank_statement_path, local: true, multipart: true do |f| %>
      <% if @import.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-800"><%= @import.errors.full_messages.to_sentence %></p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <!-- Bank Selection -->
        <div>
          <%= f.label :bank_name, "Select Your Bank / Card", class: "block text-sm font-medium text-primary mb-2" %>
          <%= f.select :bank_name,
            grouped_options_for_select({
              "Banks" => BankStatementImport::SUPPORTED_BANKS.map { |b| [b, b] },
              "Credit Cards" => BankStatementImport::SUPPORTED_CREDIT_CARDS.map { |c| [c.gsub('_', ' '), c] }
            }),
            { prompt: "Choose your bank or card..." },
            class: "w-full px-3 py-2 border border-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-accent bg-container text-primary",
            required: true
          %>
          <p class="mt-1 text-xs text-secondary">Supported: HDFC, ICICI, SBI, Axis, Kotak, and credit cards like HDFC CC, ICICI Amazon Pay, Scapia</p>
        </div>

        <!-- Account Number (Optional) -->
        <div>
          <%= f.label :account_number, "Account Number (Optional)", class: "block text-sm font-medium text-primary mb-2" %>
          <%= f.text_field :account_number,
            class: "w-full px-3 py-2 border border-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-accent bg-container text-primary",
            placeholder: "Last 4 digits or full account number"
          %>
        </div>

        <!-- Statement File -->
        <div data-controller="file-upload">
          <%= f.label :statement_file, "Bank Statement File", class: "block text-sm font-medium text-primary mb-2" %>
          <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-primary border-dashed rounded-lg bg-container hover:bg-container-hover transition-colors cursor-pointer"
               data-file-upload-target="dropzone"
               data-action="click->file-upload#openFilePicker dragover->file-upload#dragover dragenter->file-upload#dragenter dragleave->file-upload#dragleave drop->file-upload#drop">
            <div class="space-y-1 text-center">
              <svg class="mx-auto h-12 w-12 text-secondary" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <div class="flex text-sm text-secondary justify-center">
                <span class="font-medium text-accent hover:text-accent/80">Click to upload</span>
                <p class="pl-1">or drag and drop</p>
              </div>
              <p class="text-xs text-secondary">PDF, XLS, XLSX, CSV up to 10MB</p>
              <p class="text-sm font-medium text-green-600 hidden" data-file-upload-target="filename"></p>
            </div>
          </div>
          <%= f.file_field :statement_file, 
              class: "hidden",
              accept: ".pdf,.xls,.xlsx,.csv",
              data: { file_upload_target: "input", action: "change->file-upload#fileSelected" } %>
        </div>

        <!-- Password for Protected PDF (Optional) -->
        <div id="password-section">
          <%= label_tag :password, "PDF Password (if protected)", class: "block text-sm font-medium text-primary mb-2" %>
          <%= password_field_tag :password, nil,
            class: "w-full px-3 py-2 border border-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-accent bg-container text-primary",
            placeholder: "Enter PDF password if required",
            autocomplete: "off"
          %>
          <p class="mt-1 text-xs text-secondary">
            Only needed if your PDF is password protected. 
            <span class="text-green-600 font-medium" id="stored-password-hint" style="display: none;">
              ✓ Stored password will be used automatically
            </span>
          </p>
        </div>
        
        <script>
          // Show hint if stored password exists for selected bank
          document.getElementById('bank_statement_import_bank_name')?.addEventListener('change', function() {
            const storedPasswordBanks = <%= raw (BankStatementImport::SUPPORTED_BANKS + BankStatementImport::SUPPORTED_CREDIT_CARDS).select { |b| ENV["BANK_STATEMENT_PASSWORD_#{b.upcase}"].present? }.to_json %>;
            const hint = document.getElementById('stored-password-hint');
            if (hint) {
              hint.style.display = storedPasswordBanks.includes(this.value) ? 'inline' : 'none';
            }
          });
        </script>

        <!-- Submit Button -->
        <div class="flex gap-3">
          <%= f.submit "Upload & Import", class: "flex-1 px-4 py-2 bg-accent text-white rounded-lg hover:bg-accent/90 font-medium focus:outline-none focus:ring-2 focus:ring-accent" %>
          <%= link_to "Cancel", imports_path, class: "px-4 py-2 border border-primary rounded-lg text-primary hover:bg-container" %>
        </div>
      </div>
    <% end %>

    <!-- Help Section -->
    <div class="mt-8 p-4 bg-container rounded-lg border border-primary">
      <h3 class="text-sm font-semibold text-primary mb-2">Supported Banks & Cards</h3>
      <div class="grid grid-cols-2 gap-2 text-xs text-secondary">
        <div>
          <p class="font-medium text-primary mb-1">Banks:</p>
          <ul class="space-y-0.5">
            <li>• HDFC Bank</li>
            <li>• ICICI Bank</li>
            <li>• SBI</li>
            <li>• Axis Bank</li>
            <li>• Kotak Mahindra</li>
            <li>• Union Bank (UBI)</li>
            <li>• RBL Bank</li>
            <li>• Equitas Small Finance</li>
            <li>• Jupiter (Federal)</li>
            <li>• KVB</li>
            <li>• Bandhan</li>
            <li>• Wise</li>
          </ul>
        </div>
        <div>
          <p class="font-medium text-primary mb-1">Credit Cards:</p>
          <ul class="space-y-0.5">
            <li>• HDFC Credit Cards</li>
            <li>• ICICI Amazon Pay</li>
            <li>• Scapia</li>
            <li>• Kotak Royale</li>
          </ul>
          <p class="font-medium text-primary mt-2 mb-1">Investments:</p>
          <ul class="space-y-0.5">
            <li>• Zerodha Tradebook</li>
            <li>• MFCentral CAS</li>
            <li>• NPS Statement</li>
          </ul>
        </div>
      </div>
      <p class="text-xs text-secondary mt-3">
        ✨ Transactions are <strong>auto-categorized</strong> based on UPI, NEFT, and narration patterns.
      </p>
    </div>
  </div>
</div>

<% if params[:step] == "method_select" %>
  <%= render "accounts/new/method_selector",
             path: new_loan_path(return_to: params[:return_to]),
             provider_configs: @provider_configs,
             accountable_type: "Loan" %>
<% else %>
  <%= render DS::Dialog.new do |dialog| %>
    <% dialog.with_header(title: t(".title")) %>
    <% dialog.with_body do %>
      <%# AI Document Import Option %>
      <div class="mb-6 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-200">
        <div class="flex items-start gap-4">
          <div class="shrink-0">
            <%= lucide_icon "file-scan", class: "w-8 h-8 text-blue-600" %>
          </div>
          <div class="flex-1">
            <h3 class="text-sm font-medium text-blue-900 mb-1">ðŸ“„ Have a loan document?</h3>
            <p class="text-xs text-blue-700 mb-3">
              Upload your loan sanction letter, statement, or screenshot and let AI extract all the details automatically.
            </p>
            <%= link_to new_loan_document_import_path, class: "inline-flex items-center gap-2 text-sm font-medium text-blue-700 hover:text-blue-900" do %>
              <%= lucide_icon "upload", class: "w-4 h-4" %>
              Import from Document
            <% end %>
          </div>
        </div>
      </div>

      <div class="relative mb-4">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-secondary"></div>
        </div>
        <div class="relative flex justify-center text-xs">
          <span class="bg-container px-2 text-secondary">or enter manually</span>
        </div>
      </div>

      <%= render "loans/form", account: @account, url: loans_path %>
    <% end %>
  <% end %>
<% end %>
